{
	"manifest_version": 3,
	"name": "CanvasPal",
	"version": "1.0.0",
	"description": "Chrome extension for Canvas assignment prioritization",
	"permissions": [
		"storage",
		"activeTab"
	],
	"host_permissions": [
		"*://*.instructure.com/*"
	],
	"action": {
		"default_popup": "dist/popup/popup.html"
	},
	"background": {
		"service_worker": "dist/background/index.js",
		"type": "module"
	},
	"content_scripts": [
		{
			"matches": ["*://*.instructure.com/courses/*/grades"],
			"js": ["dist/contentScript/index.js"]
		}
	],
	"icons": {
		"16": "icons/icon16.png",
		"48": "icons/icon48.png",
		"128": "icons/icon128.png"
	}
}