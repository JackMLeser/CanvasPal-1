{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": "./src",
        "baseUrl": "src",
        "paths": {
            "@/*": ["./*"]
        },
        "typeRoots": [
            "./node_modules/@types",
            "./src/types"
        ],
        "types": ["chrome", "node"],
        "allowJs": true,
        "declaration": true,
        "lib": ["dom", "es2020"],
        "noEmitOnError": true,
        "sourceMap": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "**/*.test.ts",
        "tests/**/*"
    ]
}
