{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "outDir": "./dist",
        "rootDir": ".",
        "baseUrl": "src",
        "paths": {
            "@/*": ["./*"]
        },
        "typeRoots": ["./node_modules/@types", "./src/types"],
        "types": ["jest", "chrome", "node"],
        "allowJs": true,
        "declaration": true,
        "lib": ["dom", "es2020"],
        "noEmitOnError": true,
        "pretty": true,
        "diagnostics": true,
        "extendedDiagnostics": true,
        "listEmittedFiles": true
    },
    "include": [
        "src/**/*",
        "tests/**/*",
        "jest.setup.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
